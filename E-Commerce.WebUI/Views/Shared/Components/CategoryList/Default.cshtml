@model E_Commerce.WebUI.Models.CategoryListViewModel

<div class="list-group" >
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item page-link";
        if (Model.CurrentCategory == item.CategoryId)
        {
            css += " active";
        }
        <a href="/product/index?category=@item.CategoryId" class="@css">@item.CategoryName</a>
    }
</div>