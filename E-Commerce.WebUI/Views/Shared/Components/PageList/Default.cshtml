@model E_Commerce.WebUI.Models.PageListViewModel
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (Model.CurrentPage != 1)
        {
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        }

        @foreach (var item in Model.Pages)
        {
          
            if(Model.CurrentPage==item){

                <li class="page-item active"><a class="page-link" href="/product/index?page=@item&category=@Model.Category">@item</a></li>
            }
            else
            {
                 <li class="page-item"><a class="page-link" href="/product/index?page=@item&category=@Model.Category">@item</a></li>
            }
        }

        @{
            var last = Model.Pages.Count();
            if (Model.CurrentPage != last)
            {
    
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
            }
        }
    </ul>
</nav>