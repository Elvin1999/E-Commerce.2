@model E_Commerce.WebUI.Models.ProductAddViewModel

@{
    ViewBag.Title = "Add Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2>
    Add a product
</h2>
<form asp-controller="admin" asp-action="add" method="post">
    <div class="form-group" >
        <label asp-for=Product.ProductName ></label>
        <input  asp-for=Product.ProductName class="form-control" placeholder="Product Name" />
        <span class="bg-danger  p-auto text-white animate__animated animate__backInLeft " asp-validation-for="Product.ProductName" ></span>
    </div>
     <div class="form-group" >
         <select asp-for="Product.CategoryId" class="form-control"
            asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))">
        <option>Please select one</option>
    </select>

    </div>
     <div class="form-group" >
        <label asp-for=Product.UnitPrice ></label>
        <input  asp-for=Product.UnitPrice class="form-control" placeholder="UnitPrice" />
        <span class="bg-danger  p-auto text-white animate__animated animate__backInLeft " asp-validation-for="Product.UnitPrice" ></span>
    </div>
     <div class="form-group" >
        <label asp-for=Product.UnitsInStock ></label>
        <input  asp-for=Product.UnitsInStock class="form-control" placeholder="UnitsInStock" />
        <span class="bg-danger  p-auto text-white animate__animated animate__backInLeft " asp-validation-for="Product.UnitsInStock" ></span>
    </div>
    <input type="submit" value="Add" class="btn btn-xs btn-outline-success"  />
</form>