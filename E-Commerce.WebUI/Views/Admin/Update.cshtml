@model E_Commerce.WebUI.Models.ProductAddViewModel

@{
    ViewBag.Title = "Update Panel";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h2>Update Product</h2>

<form asp-controller="Admin" asp-action="Update" method="post">
    <input class="d-none" value="@Model.Product.ProductId" asp-for="Product.ProductId"/>
    <div class="form-group">
        <label asp-for=Product.ProductName></label>
        <input asp-for=Product.ProductName class="form-control" placeholder="Product Name" value="@Model.Product.ProductName" />
        <span class="bg-white  p-auto text-danger animate__animated animate__backInLeft "
              asp-validation-for="Product.ProductName"></span>
    </div>
    <div class="form-group">
        <select asp-for="Product.CategoryId" class="form-control"
            asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))"
            >
            <option>Please select one</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for=Product.UnitPrice></label>
        <input asp-for=Product.UnitPrice class="form-control" placeholder="Product UnitPrice" value="@Model.Product.UnitPrice" />
        <span class="bg-white  p-auto text-danger animate__animated animate__backInLeft "
              asp-validation-for="Product.UnitPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for=Product.UnitsInStock></label>
        <input asp-for=Product.UnitsInStock class="form-control" placeholder="Product UnitsInStock" value="@Model.Product.UnitsInStock"/>
        <span class="bg-white  p-auto text-danger animate__animated animate__backInLeft "
              asp-validation-for="Product.UnitsInStock"></span>
    </div>
    <input type="submit" class="btn btn-xs btn-outline-success" value="Update Product" />
</form>